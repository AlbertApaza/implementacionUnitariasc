@{
    Layout = null;
    ViewBag.Title = "Recuperar Contraseña";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/source/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <div class="container-fluid">
        <div class="row min-vh-100 align-items-center justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow-lg border-0 p-4">
                    <h3 class="fw-bold mb-3">Recuperar Contraseña</h3>
                    <p class="text-muted mb-4">Introduce tu correo electrónico para recibir un código de recuperación.</p>
                    <form method="post" action="@Url.Action("Recuperar", "Usuario")">
                        <div class="mb-3">
                            <label for="correo" class="form-label">Correo electrónico</label>
                            <input type="email" class="form-control shadow-sm" name="correo" required />
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary py-2">Enviar código</button>
                        </div>
                        @if (ViewBag.Mensaje != null)
                        {
                            <div class="alert alert-danger mt-3">@ViewBag.Mensaje</div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="~/source/js/jquery-3.7.1.min.js"></script>
    <script src="~/source/js/bootstrap.bundle.min.js"></script>
</body>
</html>
